<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info">
    <Appenders>
    	 <JDBC name="databaseAppender" tableName="KMEDARA.TRANSACTION_LOGS">
     		 <ConnectionFactory class="com.revature.util.ConnectionFactory" method="getConnection" />
     		 <Column name="USER_ID"  pattern="%x{user_id}"/>
      		 <Column name="DATED" isEventTimestamp="true"/>
      		 <Column name="LOGGER" pattern="%logger" />
      		 <Column name="LOGLEVEL" pattern="%level"/>
      		 <Column name="MESSAGE" pattern="%message" />
        </JDBC>
        <Http name="Http" url="logging.html">
        <PatternLayout>
                <Pattern>
                %highlight{%d [%t] %-5level: %msg%n%throwable}

                </Pattern>
            </PatternLayout>
      <JsonLayout properties="true"/>
    </Http>
        <Console name="Console" target="System_out">
            <PatternLayout>
                <Pattern>
                %highlight{%d [%t] %-5level: %msg%n%throwable}

                </Pattern>
            </PatternLayout>
        </Console>
        <File name="deskFile" fileName="C:/Users/kmeda/Desktop/desklogging.log">
            <PatternLayout header="${java:version} - ${java:os}\n">
                <Pattern>
                    [%-5level] %d{yyyy-MM-dd 12HH:mm:ss} [%t] %c{1} - %msg%n
                </Pattern>
            </PatternLayout>
        </File>
        <File name="projectFile" fileName="projectlogging.log">
            <PatternLayout>
                <Pattern>
                    [%-5level] %d{yyyy-MM-dd 12HH:mm:ss} [%t] %c{1} - 
                    %msg%n
                </Pattern>
            </PatternLayout>
        </File>
        <File name="htmlFile" fileName="logging.html">
         <PatternLayout>
                <Pattern>
                %highlight{%d [%t] %-5level: %msg%n%throwable&lt;br&lt;}
                </Pattern>
            </PatternLayout>
        </File>
    </Appenders>
    <Loggers>   
        <Logger name="Stanley" level = "trace" additivity= "false">
         <AppenderRef ref="Console"/> 
          <AppenderRef ref="Http"/>
          <AppenderRef ref = "projectFile"/>  
          <AppenderRef ref = "databaseAppender"/>
        </Logger>
        <Root >
            <AppenderRef ref="Console"/>
            <AppenderRef ref = "deskFile"/>
            <AppenderRef ref = "projectFile"/>
        </Root>
    </Loggers>
</Configuration>