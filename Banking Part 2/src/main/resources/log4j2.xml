<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
	<Appender>
		<Console name="Console" target="System_out">
			<PatternLayout>
				<Pattern>
					[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n
				</Pattern>
			</PatternLayout>
		</Console>
		<File name="File" fileName="C:/Users/son/Desktop/log.log">
			<PatternLayout>
				<Pattern>
					[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n
				</Pattern>
			</PatternLayout>
		</File>
	</Appender>
	<Loggers>
		<Logger name="proj.banking.BankMain" level="info" additivity="false">
			<AppenderRef ref="Console"/>
			<AppenderRef ref="File"/>
		</Logger>
		<Root>
			<AppenderRef ref="Console"/>
			<AppenderRef ref="File"/>
		</Root>
	</Loggers>
</Configuration>